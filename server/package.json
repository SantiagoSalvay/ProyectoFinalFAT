{
  "name": "demos-server",
  "version": "1.0.0",
  "description": "Backend para la plataforma Demos+",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node --no-deprecation src/index.js",
    "dev": "nodemon --exec \"node --no-deprecation\" src/index.js",
    "wake-db": "node wake-railway-db.js",
    "keep-db-alive": "node keep-db-alive.js",
    "build": "echo 'No build step required'",
    "postinstall": "prisma generate",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:verbose": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --verbose"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-twitter": "^0.1.5",
    "passport-twitter-oauth2": "^2.1.1",
    "prisma": "^5.10.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "cross-env": "^10.0.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "express",
    "api",
    "ong",
    "solidaridad"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
